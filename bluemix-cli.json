    "_depends": [
        "7zip",
		"extras/cf-cli"
    ],
    "depends": [
        "7zip",
        "sudo"
    ],
    "suggest": {
        "Docker": "docker"
    },
    "_pre_install": "sudo cmd /c $dir\\Bluemix_CLI-setup.exe /s /x /b\"$dir\" /v\"/qn\"
					$loc = Get-Location
					$cfcli = appdir(\"cf-cli\", $global)[0]
					cd $dir
					cmd /c 7z e -bso0 -bd -- Bluemix_CLI.msi Data1.cab
					cmd /c 7z e -bso0 -bd -- Data1.cab
					cmd /c mklink /j cfcli \"$cfcli\\current\"
					cd $loc",
    "pre_install": "sudo cmd /c $dir\\Bluemix_CLI-setup.exe /s /x /b\"$dir\" /v\"/qn\"
					$loc = Get-Location
					cd $dir
					cmd /c 7z e -bso0 -bd -- Bluemix_CLI.msi Data1.cab
					cmd /c 7z e -bso0 -bd -- Data1.cab
					mkdir cfcli | Out-Null
					mv cf.exe cfcli
					cd $loc",
    "installer": {
        "file": "bluemix.exe",
        "keep": "true"
    },
    "bin": [
        "bluemix.exe",
        [
            "bluemix.exe",
            "bx"
        ],
        "bluemix_analytics.exe"
    ],
    "checkver": {
        "url": "https://clis.ng.bluemix.net/info",
        "re": "\"latestVersion\":\"([\\d\\.]+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://public.dhe.ibm.com/cloud/bluemix/cli/bluemix-cli/Bluemix_CLI_$version_amd64.exe#/Bluemix_CLI-setup.exe"
            },
            "32bit": {
                "url": "https://public.dhe.ibm.com/cloud/bluemix/cli/bluemix-cli/Bluemix_CLI_$version_386.exe#/Bluemix_CLI-setup.exe"
            }
        }
    }
}
